<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>
<body>

    <!--- taking data from the form  --->
    <div class="container">
        <h1 id="header">TODO APP</h1>
        <div class="adding">
            <form action="/create-task" method="post">
                <div class="des">
                    <h5>DESCRIPTION</h5>
                    <input type="text" name="description" placeholder="What do you need to do" required>
                </div>
                <div class="second-fill">
                    <div class="first">
                        <select name="category" placeholder="choose a category">
                            <option value="personal">personal</option>
                            <option value="work">work</option>
                            <option value="school">school</option>
                            <option value="college">college</option>
                            <option value="other">other</option>
                        </select>
                    </div>
                    <div class="second">
                        <h5>DUE DATE</h5>
                        <input type="date" name="date" placeholder="choose a date" required>
                    </div>
                </div>
                <div class="btns">
                    <div class="btn">
                        <button type="submit"><i class="fas fa-plus"></i><span>ADD TASK</span></button>
                    </div>
                    <div class="delete">
                        <a href="#">
                            <i class="fas fa-trash-alt"></i>
                            <span>DELETE</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!--- displaying the tasks that we have added-->
        <div class="box">
            <% for(let i of todo_list) {%>
                <div class="card">
                    <div class="details">
                        <p class="task"><%=i.task %></p>
                        <p class="date"><span><i class="fas fa-calendar-alt"></i></span>
                            <%let d=i.date%>
                            <%let text=d.toString()%>
                            <%=text.slice(4,15)%>
                        </p>
                    </div>
                    <div class="category">
                        <%=i.category %>
                    </div>
                    <div class="del">
                        <a href="/delete-task/?id=<%=i._id %>">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </div>
            <%} %>
        </div>
    </div>
    <script type="text/javascript" src="/js/script.js"></script>
</body>
</html>